#//----------------------------------------------------------------------------
#// CentOS 7 ではなく公式の php5.6-fpm-apline ベース
#//----------------------------------------------------------------------------
FROM php:5.6.20-fpm-alpine
MAINTAINER d-higuchi@creationline.com

#//----------------------------------------------------------------------------
#// MySQL 拡張のビルドとインストール
#//----------------------------------------------------------------------------
RUN apk update \
	&& apk add mysql \
	&& docker-php-ext-install mysqli

#//----------------------------------------------------------------------------
#// [EOF]
#//----------------------------------------------------------------------------
