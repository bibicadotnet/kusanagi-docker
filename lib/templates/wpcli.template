## CONFIG
  config:
    container_name: ${PROFILE}_config
    image: $CONFIG_IMAGE
    user: "1000:1001"
    env_file:
      - .kusanagi
      - .kusanagi.wp
    volumes:
      - database:/var/run/mysqld
      - kusanagi:/home/kusanagi
      - ./.wp_mysqli.ini:/usr/local/etc/php/conf.d/wp_mysqli.ini
    command: wp --version

